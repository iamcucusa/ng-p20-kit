/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "paths": {
      "@ng-p20-kit/theme": ["./projects/theme/src/public-api.ts"],
      "@ng-p20-kit/theme/*": ["./projects/theme/src/*"],
      "@ng-p20-kit/showcase/*": ["./projects/showcase/src/*"],
      "@core/*": ["./projects/showcase/src/app/core/*"],
      "@theme-demo/*": ["./projects/showcase/src/app/theme-demo/*"],
      "@trial/*": ["./projects/showcase/src/app/trial/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./projects/showcase/tsconfig.app.json"
    },
    {
      "path": "./projects/showcase/tsconfig.spec.json"
    },
    {
      "path": "./projects/theme/tsconfig.lib.json"
    },
    {
      "path": "./projects/theme/tsconfig.spec.json"
    }
  ]
}
